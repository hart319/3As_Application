<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:gravity="center_horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Android Event Start"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="normal" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/countdown"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Remaining Time For Your Exam"
                    android:textColor="@color/white"
                    android:fontFamily="@font/barlowm"
                    android:textSize="22dp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_layout_2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="00"
                        android:layout_marginLeft="0dp"
                        android:textColor="#FFFFC800"
                        android:textSize="45dp"
                        android:fontFamily="@font/buntunewf7"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_days_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Days"
                        android:fontFamily="@font/buntunewf6"
                        android:layout_marginLeft="0dp"
                        android:textColor="#FFFFC800"
                        android:textSize="18dp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="00"
                        android:textColor="#FFFFC800"
                        android:layout_marginRight="0dp"
                        android:textSize="45dp"
                        android:fontFamily="@font/buntunewf7"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_hour_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Hours"
                        android:layout_marginRight="0dp"
                        android:textColor="#FFFFC800"
                        android:textSize="18dp"
                        android:fontFamily="@font/buntunewf6"
                        android:textStyle="normal" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_mins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="00"
                        android:layout_marginLeft="0dp"
                        android:fontFamily="@font/buntunewf7"
                        android:textColor="#FFFFC800"
                        android:textSize="45dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_mins_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Minutes"
                        android:layout_marginLeft="0dp"
                        android:textColor="#FFFFC800"
                        android:textSize="18dp"
                        android:fontFamily="@font/buntunewf6"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="00"
                        android:layout_marginLeft="0dp"
                        android:textColor="#FFFFC800"
                        android:textSize="45dp"
                        android:fontFamily="@font/buntunewf7"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_sec_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Seconds"
                        android:fontFamily="@font/buntunewf6"
                        android:layout_marginLeft="0dp"
                        android:textColor="#FFFFC800"
                        android:textSize="18dp"
                        android:textStyle="normal" />
                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardMaxElevation="15dp"
                app:cardCornerRadius="15dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/subCM"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient3"
                    android:layout_marginTop="0dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Combined Maths"
                        android:textColor="#0f2027"
                        android:fontFamily="@font/buntunewf7"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subCMPer"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="67  %"
                        android:fontFamily="@font/buntunewf7"
                        android:textColor="#0f2027"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardMaxElevation="15dp"
                app:cardCornerRadius="15dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/subChem"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient3"
                    android:layout_marginTop="0dp">


                    <TextView
                        android:layout_width="200dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Chemistry"
                        android:fontFamily="@font/buntunewf7"
                        android:textColor="#0f2027"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subChemPer"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="67  %"
                        android:fontFamily="@font/buntunewf7"
                        android:textColor="#0f2027"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardMaxElevation="15dp"
                app:cardCornerRadius="15dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/subPhy"
                android:visibility="gone"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient3"
                    android:layout_marginTop="0dp">


                    <TextView
                        android:layout_width="200dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Physics"
                        android:fontFamily="@font/buntunewf7"
                        android:textColor="#0f2027"
                        android:textSize="25dp"

                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/subPhyPer"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="67  %"
                        android:fontFamily="@font/buntunewf7"
                        android:textColor="#0f2027"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardMaxElevation="15dp"
                app:cardCornerRadius="15dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/subBio"
                android:visibility="gone"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient3"
                    android:layout_marginTop="0dp">


                    <TextView
                        android:layout_width="200dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Biology"
                        android:fontFamily="@font/buntunewf7"
                        android:textColor="#0f2027"
                        android:textSize="25dp"

                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/subBioPer"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="67  %"
                        android:fontFamily="@font/buntunewf7"
                        android:textColor="#0f2027"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_weight="3">

                <Button
                    android:id="@+id/newgroup"
                    android:layout_width="200dp"
                    android:background="@drawable/buttonc"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Add Friends"
                    android:textAllCaps="false"
                    android:textColor="#FFFFC800"
                    android:fontFamily="@font/buntunewf7"
                    android:textSize="20dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/group"
                    android:layout_width="250dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:text="Login to Your Group"
                    android:textAllCaps="false"
                    android:textColor="#FFFFC800"
                    android:fontFamily="@font/buntunewf7"
                    android:textSize="20dp"
                    android:background="@drawable/buttonc"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/pastp"
                    android:layout_width="150dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/buttonc"
                    android:layout_gravity="center"
                    android:text="Pass Papers"
                    android:textAllCaps="false"
                    android:textColor="#FFFFC800"
                    android:fontFamily="@font/buntunewf7"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/logout"
                    android:layout_width="120dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonc"
                    android:layout_gravity="center"
                    android:text="Logout"
                    android:textColor="#FFFFC800"
                    android:fontFamily="@font/buntunewf7"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
