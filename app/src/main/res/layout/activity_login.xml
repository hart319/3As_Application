<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:layout_gravity="center"
    >

    <TextView
        android:id="@+id/loginscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Login"
        android:fontFamily="@font/newf7"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:textSize="18dp"
        android:layout_gravity="left"
        android:textStyle="bold"
        android:fontFamily="@font/buntunewf7"
        android:textColor="@color/white"
        android:text="Email"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textColorHint="@color/white"
        android:hint="Enter your registered email"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:ems="10"/>
    <TextView
        android:id="@+id/txtPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:fontFamily="@font/buntunewf7"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginLeft="50dp" />
    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textSize="12dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="Enter your Password"
        android:inputType="textPassword"
        android:ems="10" />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="150dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/buntunewf7"
        android:layout_gravity="center"
        android:textColor="#53BBE6"
        android:textAllCaps="false"
        android:background="@drawable/buttonc"
        android:textSize="18dp"
        android:text="Login" />
    <TextView android:id="@+id/lnkRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="New to 3As? Register here"
        android:gravity="center"
        android:textSize="20dp"
        android:fontFamily="@font/barlowsemi"
        android:textColor="#00BCD4"/>
</LinearLayout>